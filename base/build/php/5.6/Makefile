IMAGE_NAME=rounds/10m-php:5.6

update:
	$(MAKE) update-helper-start
	mv cached/5.6/* ./cached
	rm -rf cached/5.6
	sed -i -e "s/^FROM .*/FROM rounds\/10m-build/" cached/Dockerfile # Inherit from our own docker tree
	sed -i -e "s|./configure \\\|./configure --enable-zip --enable-opcache --enable-mbstring=all \\\|" cached/Dockerfile # Enable extentions
	find cached/. -type f -name "docker-php-ext-*" -exec sed -i -e "1s/^/\
# *** DO NOT EDIT THIS FILE MANUALLY ***\n\
# *** Will be overwritten by 'make update' ***\n/" {} + # Outside file warning
	$(MAKE) update-helper-end

include ../../../../include/docker_images.mk
